{% extends app.request.getPathInfo == '/_fragment' ? "::empty.html.twig" : "::base.html.twig" %}
	{% block body %}
		{% if app.request.getPathInfo == '/_fragment' %}
			<div id="loginModal" class="reveal-modal medium">
			    <div class="row login-modal-header">
			        <img src="/bundles/raykupage/images/logo.png" alt="rayku">
			        <a class="close-reveal-modal">×</a>
			    </div>
			    <div class="row login-form">
			        <div class="row login-modal-error">
			            <div class="large-12 columns">
			                <p><strong>Please re-enter your email and password</strong><br>
			                The password you entered is incorrect. Please try again.</p>
			            </div>
			        </div>
			        <form action="{{ path('fos_user_security_check') }}" method="post">
			        	<input type="hidden" name="_csrf_token" value="51df64d09852dfef05083351c9e640b8b251b5e8">        
			            <div class="row">
			                <div class="large-12 columns">
                            <label class="username">Email or Username:</label>
							    <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="E-mail or Username" required="required" class="login-input" />
			                </div>
			            </div>
			            <div class="row">
			                <div class="large-12 columns">
                                <label class="password">Password:</label>
							    <input type="password" id="password" name="_password" placeholder="Password" required="required"  class="login-input" />
								<input type="submit" class="bbutton login-button" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="bbutton" />
			                </div>
			            </div>
			            <div class="row">
			                <div class="large-6 columns remember">
			                    <label for="remember_me" class="remember-checkbox">Remember me</label>
							    <input type="checkbox" id="remember_me" name="_remember_me" value="on">
			                </div>
			                <div class="large-6 columns forgot">
			                    <a href="#" class="forgot-password">Forgot your password?</a>
			                </div>
			            </div>
			        </form>
			    </div>
			    <div class="login-modal-divider1">
			    </div>
			    <div class="row forgot-email-form">
			        <form action="/resetting/send-email" method="post">
			            <div class="row">
			                <div class="large-12 columns">
			                    <label class="login-label">Forgot Password</label>
			                    <input class="login-input" name="username" type="text" placeholder="Enter your Username" required>
			                    <input type="submit" value="Submit" class="bbutton submit-button" class="bbutton"/>
			                </div>
			            </div>
			        </form>
			    </div>
			    <div class="login-modal-footer">
			        <div class="copyright">
			            <p>Rayku © 2013</p>
			        </div>
			        <div class="footer-links">
			            <ul>
			                <li><a href="#">Privacy</a></li>
			                <li>/</li>
			                <li><a href="#">Legal</a></li>
			                <li>/</li>
			                <li><a href="#">Help</a></li>
			        </ul></div>
			    </div>
			</div>
		{% else %}
			{% block stylesheets %}
				{{ parent() }}
				<link href="{{ asset('bundles/raykupage/css/style.css') }}" type="text/css" rel="stylesheet" media="screen" />
			{% endblock %} 
		    <div class="form-box signup-box fade-in">
				<a href="{{ path('rayku_page_homepage') }}" class="logo"></a>
				{% if error %}
				    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
				{% endif %}
		        <form action="{{ path("fos_user_security_check") }}" method="post">
		        	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<ul>
						<li>
							<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="E-mail or Username" required="required" class="login-input" />
						</li>
						<li>
							<input type="password" id="password" name="_password" placeholder="Password" required="required"  class="login-input" />
						</li>
						<li class="right submit">
							<input type="submit" value="Get Started"  class="bbutton" />
						</li>
						<li>
		                    <label for="remember_me" class="remember-checkbox">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
						    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
						</li>
					</ul>
					<div class="clear"></div>
				</form>
			</div>
			
			{% block javascripts %}
				{{ parent() }}
			{% endblock %}
		{% endif %}
	{% endblock %}
