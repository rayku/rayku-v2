<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
       <service id="sonata.admin.course" class="Rayku\ApiBundle\Admin\CourseAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Instructor" label="Courses"/>
          <argument />
          <argument>Rayku\ApiBundle\Entity\Course</argument>
          <argument>SonataAdminBundle:CRUD</argument>
          <call method="setTranslationDomain">
              <argument>ApiBundle</argument>
          </call>
      </service>
   </services>
</container>