{% extends 'RaykuStaticBundle::signup-layout.html.twig' %}

{% block body %}
    <div class="tutor-box fade-in">
        <div class="form-box">
            <a href="#" class="logo"></a>
            <form action="/register" method="post">
                <ul>
                    <li>
                        <label>Full Name</label>
                        <input type="text" name="name" required />
                    </li>
                    <li>
                        <label>Email address</label>
                        <input type="email" name="email" required />
                    </li>
                    <li>
                        <label>Password</label>
                        <input type="password" name="password" required />
                    </li>
                    <li>
                        <label>Where did you find us?</label>
                        <input type="text" name="findus" />
                    </li>
                    <li class="left align_right">
                        By clicking Get Started you agree to the <a href="#">Terms & Conditions</a>
                    </li>
                    <li class="right submit">
                        <input type="submit" value="Get Started" />
                    </li>
                </ul>
                <div class="clear"></div>
            </form>
            <p class="bottom-line">Already have an account? <a href="#">Sign In to Rayku!</a></p>
        </div>
        <ol>
            <li class="fade-in two">
                <strong>Register an account</strong>
                It's completely free and takes 30 seconds
            </li>
            <li class="fade-in four">
                <strong>Complete your profile</strong>
                Fill in some basic information to help us match you with students
            </li>
            <li class="fade-in six">
                <strong>Watch training videos</strong>
                Get up to speed in 15 minutes our getting-started videos
            </li>
            <li class="fade-in eight">
                <strong>Start tutoring!</strong>
                Earn money, get clients. Your tutoring rates are yours to decide
            </li>
        </ol>
    </div>
    
    <footer>
        <nav>
            <a href="/about">about</a>
            <a href="#">jobs</a>
            <a href="#">Email us</a>
            <a href="#">Legal</a>
            <a href="/become-a-tutor">become  a tutor</a>
        </nav>
    </footer>
{% endblock %}